{
	"background": {
		"scripts": ["src/background.js"]
	},
	"content_scripts": [{
		"matches": [
			"*://secure.runescape.com/m=hiscore/*",
			"*://secure.runescape.com/m=hiscore_oldschool/*"
		],
		"js": ["src/content.js"]
	}],
	"manifest_version": 2,
	"name": "Runescape Hiscore Improvements",
	"version": "0.4.9",
	"author": "Californ1a",

	"description": "Improve the RS Hiscores! Toggle viewing virtual levels on both RS3 and OSRS hiscores.",
	"homepage_url": "https://github.com/Californ1a/RSHiscoreImprovements",

	"permissions": ["tabs", "storage"],
	"browser_action": {
		"default_icon": {
			"16": "assets/skillicon-16.png",
			"48": "assets/skillicon-48.png"
		},
		"default_popup": "src/popup/index.html"
	},
	"icons": {
		"16": "assets/skillicon-16.png",
		"48": "assets/skillicon-48.png",
		"128": "assets/skillicon-128.png"
	}
}